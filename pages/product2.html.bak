<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-left">
            <a href="nextpage.html" class="navbar-text">&copy;.JOHNNY.2003</a>
        </div>
        <div class="navbar-right">
            <img src="../assets/images/bag.png" alt="bag" class="bag-icon">
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <div class="product-container">
            <!-- Image Carousel -->
            <div class="carousel">
                <div class="carousel-images">
                    <img src="../assets/images/tee1 johnny_1.png" alt="Product Image 1">
                    <img src="../assets/images/tee1 johnny.png" alt="Product Image 2">
                    
                    <img src="../assets/images/tee1 johnny_3.png" alt="Product Image 3">
